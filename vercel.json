{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "cd client && npm install && npm run build"
      }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ],
  "env": {
    "BLOB_READ_WRITE_TOKEN": "vercel_blob_rw_2HWzpsshpXLcKO4Y_PJqeQXQRkUlJq8yUIdWeHfFRkZx4XX",
    "CI": "false",
    "DISABLE_ESLINT_PLUGIN": "true"
  }
} 